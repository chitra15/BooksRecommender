AddBookForm:

<AddBookForm>:
    orientation: "vertical"
    search_input: search_box
    search_results: search_results_list
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        Button:
            text: "Home"
            pos_hint_x: None
            width: "20px"
        Button:
            text: "Search"
            size_hint_x: None
            width: "60dp"
            on_press: root.search_book()
            Image:
                source:
        TextInput:
            id: search_box
            width: "200dp"
            size_hint_x: None
    BoxLayout:
        orientation: "vertical"
        ListView:
            id: search_results_list
            item_strings: [] #can manually enter values(static ones)

