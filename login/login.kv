AddLoginForm:

<AddLoginForm>:
    BoxLayout:
        id: header
        padding: [40,40,40,40]
        spacing: 10
        orientation: "vertical"
        Label:
            text: 'Books Recommender'
            font_size: 40
        BoxLayout:
            id: body
            orientation:"horizontal"
            BoxLayout:
                Image:
                    source: "user1.png"
                    size_hint_x: None
                    width: "40dp"
                    height: "40dp"
                    padding: [10,10,10,10]
            BoxLayout:
                TextInput:
                    id: UserTextField
                    text: 'Username'
                    multiline: False
                    font_size: 30
        BoxLayout:
            id: body
            orientation:"horizontal"
            BoxLayout:
                Image:
                    source: "pass.png"
                    size_hint_x: None
                    width: 40
                    height: 40
            BoxLayout:
                TextInput:
                    id: PasswordField
                    text: 'Password'
                    multiline: False
                    font_size: 30

        Button:
            text: 'Sign In'
            font_size: 24

        BoxLayout:
            id: footer
            padding: [100,100,100,100]
            spacing: 10
            orientation: "vertical"
            Label:
                text: "Don't have an account yet? SignUp."
                font_size: 10