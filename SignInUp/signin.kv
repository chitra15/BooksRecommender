SignInForm:

<SignInForm>:
    username_box: username_input
    password_box: password_input

    BoxLayout:
        orientation: "vertical"
        size_hint_y: None
        height: "300dp"
        padding: "10dp"

        Label:
            text: 'Books Recommender'
            font_size: 40

        GridLayout:
            cols: 2
            row_default_height: "50dp"
            row_force_default: True
            spacing: "10dp"
            padding: "10dp"

            Label:
                text: "Username"
                size_hint_x: None
                width: "200dp"

            TextInput:
                id: username_input
                size_hint_x: None
                width: "500dp"
            Label:
                text: "Password"
            TextInput:
                password: True
                id: password_input

        GridLayout:
            cols: 1
            row_default_height: "50dp"
            row_force_default: True
            spacing: "50dp"
            padding: "50dp"
            Button:
                size_hint_y: None
                height: "40dp"
                text: "Login"
                size_hint_x: None
                width: "675dp"
                on_press: root.login()